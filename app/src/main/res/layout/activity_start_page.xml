<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.feh.hiko.StartPageActivity" >

    <ImageView
        android:id="@+id/start_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/hike_logo" android:contentDescription="brand_icon"/>

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_logo"
        android:layout_alignRight="@+id/start_logo"
        android:layout_below="@+id/start_logo"
        android:onClick="startMenuActivity"
        android:text="@string/start_button" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/french_flag_imageView"
        android:src="@drawable/french_flag" android:contentDescription="french_flag"
        android:layout_below="@+id/start_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="setFrLanguage"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/us_flag_imageView"
        android:src="@drawable/american_flag" android:contentDescription="us_flag"
        android:layout_alignRight="@+id/start_logo"
        android:layout_alignEnd="@+id/start_logo"
        android:onClick="setUsLanguage"
        android:layout_below="@+id/start_button" />


</RelativeLayout>
